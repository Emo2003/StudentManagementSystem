@{
}
<form action="/Subject/AddDB" style="max-width: 600px; margin: auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="name" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">Name</label>
        <input type="text" class="form-control" id="name" name="Name" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>

    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="doc_Id" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">DoctorName</label>
        <select id="doc_Id" name="Doc_Id" class="form-select">
            <option value="0" selected disabled>Choose one Name</option>
            @foreach (Doctor doc in ViewBag.doctors)
            {
                <option value="@doc.ID">@doc.Name</option>
            }
        </select>
    </div>
   
    
  
    <button type="submit" class="btn btn-primary" style="padding: .5rem 1rem; border: none; border-radius: 5px; background-color: #007bff; color: white; font-weight: bold;">Submit</button>
</form>
