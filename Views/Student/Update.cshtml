@{
}
<form action="/Student/UpdateDB" style="max-width: 600px; margin: auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <input hidden type="number" name="id" value="@Model.ID" />
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="name" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">Name</label>
        <input type="text" class="form-control" id="name" name="Name" value="@Model.Name" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="age" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">BirthDate</label>
        <input type="date" class="form-control" id="age" name="Age" value="@Model.DateOfBirth" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="address" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">Address</label>
        <input type="text" class="form-control" id="address" name="Address" value="@Model.Address" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="email" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">Email</label>
        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
     <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="password" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">Password</label>
        <input type="text" class="form-control" id="email" name="Password" value="@Model.Password" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="phone" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">Phone</label>
        <input type="number" class="form-control" id="phone" name="PhoneNumber" value="@Model.PhoneNumber" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="level" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">Level</label>
        <input type="text" class="form-control" id="level" name="Level" value="@Model.Level" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="phone" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">TotalMark</label>
        <input type="number" class="form-control" id="phone" name="PhoneNumber" value="@Model.TotalMark" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="gpa" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">GPA</label>
        <input type="number" class="form-control" id="gpa" name="GPA" value="@Model.GPA" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>

    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="sub_Id" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">SubjectName</label>
        <select id="sub_Id" name="Sub_Id" class="form-select">
            <option value="0" selected disabled>Choose one Name</option>
            @foreach (Subject subject in ViewBag.Subjects)
            {
                <option value="@subject.ID">@subject.Name</option>
            }
        </select>
    </div>
   
    
    <button type="submit" class="btn btn-primary" style="padding: .5rem 1rem; border: none; border-radius: 5px; background-color: #007bff; color: white; font-weight: bold;">Update</button>
</form>
