<form action="/Doctor/AddDB" style="max-width: 600px; margin: auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="name" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">Name</label>
        <input type="text" class="form-control" id="name" name="Name" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="date" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">BirthDate</label>
        <input type="date" class="form-control" id="date" name="DateOfBirth" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="address" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">Address</label>
        <input type="text" class="form-control" id="address" name="Address" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>
    <div class="mb-3" style="margin-bottom: 1rem;">
        <label for="phonenumber" class="form-label" style="display: block; margin-bottom: .5rem; font-weight: bold;">Phone</label>
        <input type="number" class="form-control" id="phonenumber" name="Phone" style="width: 100%; padding: .5rem; border: 1px solid #ccc; border-radius: 5px;">
    </div>



    <button type="submit" class="btn btn-primary" style="padding: .5rem 1rem; border: none; border-radius: 5px; background-color: #007bff; color: white; font-weight: bold;">Submit</button>
</form>
